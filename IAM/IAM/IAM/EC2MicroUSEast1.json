{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowLaunchT2MicroUSEast1",
      "Effect": "Allow",
      "Action": "ec2:RunInstances",
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "aws:RequestedRegion": "us-east-1"
        },
        "StringLike": {
          "ec2:InstanceType": "t2.micro"
        }
      }
    }
  ]
}
